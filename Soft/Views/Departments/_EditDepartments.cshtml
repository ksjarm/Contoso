@using Contoso.Pages.Constants;
@using Contoso.Pages.HtmlHelpers
@model Department

@{
    ViewData[Data.Title] = nameof(Department);
    ViewData[Data.ItemID] = Model?.ID;
    var instructors = (IEnumerable<SelectListItem>)ViewBag.Instructors;
}

@Html.EditItem(x => x.Name)
@Html.EditItem(x => x.Budget)
@Html.EditItem(x => x.StartDate)
@Html.SelectItem(x => x.InstructorID, instructors, x => x.Administrator)