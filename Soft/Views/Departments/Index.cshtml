@using Contoso.Pages.HtmlHelpers
@using Contoso.Pages.Constants
@using System.Linq.Expressions;
@model IEnumerable<DepartmentView>

@{
    Layout = Layouts.Index;
    ViewData[Datas.Title] = Texts.Departments;
    var columns = new List<Expression<Func<DepartmentView, dynamic>>>{
        {x => x.Name },
        {x => x.Description },
        {x => x.Budget },
        {x => x.StartDate },
        {x => x.InstructorName },
    };
    dynamic getId(DepartmentView c) => c.ID;
}

@Html.ViewList(Model, columns, getId)