@using Contoso.Pages.Constants;
@using Contoso.Pages.HtmlHelpers;
@using System.Linq.Expressions;
@model IEnumerable<CourseAssignmentView>

@{
    Layout = Layouts.Index;
    ViewData[Datas.Title] = Texts.CourseAssignments;
    var columns = new List<Expression<Func<CourseAssignmentView, dynamic>>>{
        {x => x.InstructorID },
        {x => x.InstructorName },
        {x => x.CourseID },
        {x => x.CourseName },
        {x => x.Description },
        {x => x.ValidFrom },
        {x => x.ValidTo },
    };
    dynamic getId(CourseAssignmentView c) => c.ID;
}

@Html.ViewList(Model, columns, getId)