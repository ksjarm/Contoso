@using Contoso.Pages.Constants;
@using Contoso.Pages.HtmlHelpers;
@using Contoso.Aids;
@model ParentView

@{
	ViewData[Datas.Title] = nameof(Parent);
	ViewData[Datas.ItemID] = Model?.ID;
}

@Html.ViewItem(x => x.ID)
@Html.ViewItem(x => x.FirstName)
@Html.ViewItem(x => x.Name)
@Html.ViewItem(x => x.Gender)
@Html.ViewItem(x => x.PhoneNr)
@Html.ViewItem(x => x.Code)
@Html.ViewItem(x => x.Description)
@Html.ViewItem(x => x.ValidFrom)
@Html.ViewItem(x => x.ValidTo)
@Html.ViewImage(x => x.PhotoView, 100)

<dt class="col-sm-2">
	@Html.DisplayNameFor(m => m.Relationships)
</dt>
<dd class="col-sm-10">
	<table class="table">
		<tr>
			<th>Kid</th>
			<th>Enrollment Date</th>
		</tr>
		@foreach (var item in Model.Relationships) {
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.FullName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.EnrollmentDate)
				</td>
			</tr>
		}
	</table>
</dd>