@using Contoso.Pages.Constants;
@using Contoso.Pages.HtmlHelpers;
@using System.Linq.Expressions;
@model IEnumerable<Student>

@{
    Layout = Layouts.Index;
    ViewData[Datas.Title] = Texts.Students;
    var columns = new Dictionary<string, Expression<Func<Student, dynamic>>>{
        {nameof(Student.FirstName), x => x.FirstName },
        {nameof(Student.Name),x => x.Name },
        {nameof(Student.EnrollmentDate),x => x.EnrollmentDate } 
    };
    dynamic getId(Student c) => c.ID;
}

@Html.ViewList(Model, columns, getId)