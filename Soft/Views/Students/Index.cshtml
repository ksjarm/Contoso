@using Contoso.Pages.Constants;
@using Contoso.Pages.HtmlHelpers;
@using System.Linq.Expressions;
@model IEnumerable<StudentView>

@{
    Layout = Layouts.Index;
    ViewData[Datas.Title] = Texts.Students;
    var columns = new List<Expression<Func<StudentView, dynamic>>>{
        { x => x.FirstName },
        { x => x.Name },
        { x => x.EnrollmentDate },
        { x => x.Description },
        { x => x.ValidFrom },
        { x => x.ValidTo },
    };
    dynamic getId(StudentView c) => c.ID;
}

@Html.ViewList(Model, columns, getId)