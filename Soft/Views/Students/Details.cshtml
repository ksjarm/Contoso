@model Student

@{
	Layout = "_Details";
	ViewData["Caption"] = "Student";
	ViewData["ItemID"] = Model.ID;
}

<partial name="_ViewCourse" model="@Model" />

<dt class="col-sm-2">
	@Html.DisplayNameFor(m => m.Enrollments)
</dt>
<dd class="col-sm-10">
	<table class="table">
		<tr>
			<th>Course Title</th>
			<th>Grade</th>
		</tr>
		@foreach (var item in Model.Enrollments)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Course.Title)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Grade)
				</td>
			</tr>
		}
	</table>
</dd>

