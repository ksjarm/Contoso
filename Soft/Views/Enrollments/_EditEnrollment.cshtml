@using Contoso.Pages.Constants;
@using Contoso.Pages.HtmlHelpers
@model Enrollment

@{
    ViewData[Data.Title] = nameof(Enrollment);
    ViewData[Data.ItemID] = Model?.ID;
    var courses = (IEnumerable<SelectListItem>)ViewBag.Courses; 
    var students = (IEnumerable<SelectListItem>)ViewBag.Students;
}

@Html.SelectItem(x => x.CourseID, courses, x => x.Course)
@Html.SelectItem(x => x.StudentID, students, x => x.Student)
@Html.EditItem(x => x.Grade)
