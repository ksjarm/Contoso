@using Contoso.Pages.HtmlHelpers
@using Contoso.Pages.Constants
@using System.Linq.Expressions;
@model IEnumerable<CourseView>

@{
    Layout = Layouts.Index;
    ViewData[Datas.Title] = Texts.Courses;
    var columns = new Dictionary<string, Expression<Func<CourseView, dynamic>>>{
        {nameof(CourseView.Number), x => x.Number },
        {nameof(CourseView.Name),x => x.Name },
        {nameof(CourseView.Credits),x => x.Credits } };
    dynamic getId(CourseView c) => c.ID;
}

@Html.ViewList(Model, columns, getId)