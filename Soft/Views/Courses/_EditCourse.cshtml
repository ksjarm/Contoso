@using Contoso.Pages.Constants;
@using Contoso.Pages.HtmlHelpers
@model CourseView

@{
    ViewData[Data.Title] = nameof(Course);
    ViewData[Data.ItemID] = Model?.ID;
    var departments = (IEnumerable<SelectListItem>)ViewBag.Departments;
}

@Html.EditItem(x => x.Name)
@Html.EditItem(x => x.Credits)
@Html.SelectItem(x => x.DepartmentID, departments)