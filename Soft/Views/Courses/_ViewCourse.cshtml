@using Contoso.Pages.Constants;
@using Contoso.Pages.HtmlHelpers;
@model Course

@{
    ViewData[Data.Title] = nameof(Course);
    ViewData[Data.ItemID] = Model?.ID;
}

@Html.ViewItem(x => x.Number)
@Html.ViewItem(x => x.Name)
@Html.ViewItem(x => x.Credits)
@Html.ViewItem(x => x.Department.Name, x => x.Department)