@using Contoso.Pages.HtmlHelpers;
@using Contoso.Pages.Constants;
@model InstructorView

@{
    ViewData[Datas.Title] = nameof(Instructor);
    ViewData[Datas.ItemID] = Model?.ID;
}

@Html.ViewItem(x => x.FirstName)
@Html.ViewItem(x => x.Name)
@Html.ViewItem(x => x.HireDate)
@Html.ViewItem(x => x.Office)

<dd class="col-sm-2">
    @Html.DisplayNameFor(x => x.Courses)
</dd>

<dd class="col-sm-10">
    <table class="table">
        <tr>
            <td>Number</td>
            <td>Title</td>
            <td>Credits</td>
        </tr>
        @foreach (var item in Model.Courses) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credits)
                </td>
            </tr>
        }
    </table>
</dd>