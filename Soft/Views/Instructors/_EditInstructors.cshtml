@using Contoso.Data;
@using Contoso.Pages.Constants;
@using Contoso.Pages.HtmlHelpers;
@using Contoso.Facade.Common;
@model InstructorView

@{
    ViewData[Datas.Title] = nameof(Instructor);
    ViewData[Datas.ItemID] = Model?.ID;
    var genders = (IEnumerable<SelectListItem>)ViewBag.Genders;
}

@Html.EditItem(x => x.FirstName)
@Html.EditItem(x => x.Name)
@Html.SelectItem(x => x.Gender, genders)
@Html.EditItem(x => x.HireDate)
@Html.EditItem(x => x.Office)
@Html.EditItem(x => x.Description)
@Html.EditItem(x => x.ValidFrom)
@Html.EditItem(x => x.ValidTo)